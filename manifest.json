{
    "manifest_version": 3,
    "name": "Movie Critic",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": ["https://www.netflix.com/browse", "https://www.netflix.com/search*"]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "permissions": [
        "activeTab"
    ]
}